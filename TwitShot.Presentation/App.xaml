<Application xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Presentation="clr-namespace:TwitShot.Presentation"
             x:Class="TwitShot.Presentation.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Presentation:AppBootstrapper x:Key="bootstrapper" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="glassBrush" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF3C6AA3" Offset="0.828"/>
                <GradientStop Color="#FF99CAA8" Offset="0.332"/>
                <GradientStop Color="#FFCACACA" Offset="0"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>